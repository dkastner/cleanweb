<p id="notice"><%= notice %></p>

<h1>Welcome <%= @student.name %>!</h1>
<div id="student-info"  class="box">
	<div class="left"><img id="avatar" src="<%= @student.avatar.url(:small) %>" /></div>
	<ul class="stats">
		<li id="stat-gas stat-<%= @student.gas %>" class="expandable">
			<!-- personal Gas usage stats -->
		</li>
		<li id="stat-electricity stat-<%= @student.electricity %>" class="expandable">
			<!-- personal Electricity usage stats -->
		</li>
		<li id="stat-oil stat-<%= @student.oil %>" class="expandable">
			<!-- personal Oil usage stats -->
		</li>
	</ul>
</div>
<div id="suggestions"> </div>

<%= link_to 'Edit', edit_student_path(@student) %> |
